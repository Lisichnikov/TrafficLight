<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="76dp"
        android:text="Йоу чел че как, светофор типо"
        android:textSize="20dp"
        tools:context=".MainActivity" />

    <Button
        android:id="@+id/buttonRed"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="198dp"
        android:onClick="buttonRed_Click"
        android:text="Красный"/>

    <Button
        android:id="@+id/buttonYellow"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonRed"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="84dp"
        android:text="Желтый"/>

    <Button
        android:id="@+id/buttonGreen"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonYellow"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="118dp"
        android:onClick="buttonGreen_Click"
        android:text="Зеленый"/>

</RelativeLayout>